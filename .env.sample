# ===============================
# Application Settings
# ===============================
APP_NAME="GitLab User Reports"
DEBUG=true
HTTP_PORT=8000

# Allowed CORS origins (comma-separated list)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

REQUIRE_ADMIN_TOKEN_FOR_GITLAB_CONFIG=false

TRAEFIK_DASHBOARD_PORT=8080

# ===============================
# URL Settings
# ===============================
BACKEND_URL=http://localhost:8000
# This is injected into the Next.js build and consumed by the browser.
# Set it to the public address (including any path prefix) where the backend is reachable.
NEXT_PUBLIC_BACKEND_URL=http://localhost:8000

# Extra hosts
HOST_VC_DOMAIN=example.com
HOST_VC=192.168.1.2


# ===============================
# MongoDB Settings
# ===============================

MONGODB_HOST=mongodb
MONGODB_PORT=27017
MONGODB_OUT_PORT=27017
MONGODB_DATABASE=gitlab_user_reports
MONGODB_ROOT_USERNAME=root
MONGODB_ROOT_PASSWORD=example


# ===============================
# AI Settings
# ===============================
LLM_MODEL_NAME=deepseek/deepseek-v3.2
OPENROUTER_API_KEY=sk-or-
LOGFIRE_TOKEN=pylf_v1_


# ===============================
# Email Settings
# ===============================
SMTP_HOST="mail.yourdomain.com"
SMTP_PORT=587
SMTP_USERNAME="your_email@yourdomain.com"
SMTP_PASSWORD="your_email_password"
SMTP_USE_TLS=true
SMTP_USE_SSL=false
EMAIL_FROM="your_email@yourdomain.com"
